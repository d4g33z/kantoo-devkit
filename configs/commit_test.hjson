#-----------------------------------------------------------------------------------------------------------------------
OS: funtoo
ARCH: x86-64bit
SUBARCH: amd64-k10
ENTROPY_ARCH: amd64

DOCKER_TAG: stage3

#this doesn't work yet but it should
DOCKER_BUILDKIT:1

DOT_DIR:'lib/dot'

DOCKER_OPTS:
{
    tty:true,
    init:true,
    remove:false,
    entrypoint:"/bin/bash",
    detach:true,
}

#-----------------------------------------------------------------------------------------------------------------------
#environment variables for every call of container.exec_run
envplugins:
{
    EDITOR: cat
    LC_ALL: en_US.UTF-8
}

execplugins:
{
    pluginA:
    {
        text:
        '''
        #!/usr/bin/env sh
        touch /root/pluginA
        cat > /root/pluginA << EOF
        pluginA
        EOF
        '''
    },

    pluginB:
    {
        text:
        '''
        #!/usr/bin/env sh
        touch /root/pluginB
        cat > /root/pluginB << EOF
        pluginB
        EOF
        '''
    },

}

